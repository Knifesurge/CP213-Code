package cp213;

import java.util.Scanner;

public class Lab01 {

    /**
     * @param a
     * @param b
     * @return
     */
    public static int gcd(int a, int b) {

        // your code here
    	if (b == 0)
    	{
    		return a;
    	} else
    	{
    		int temp_a = b;
    		int temp_b = a % b;
    		return gcd(temp_a, temp_b);
    	}
    }

    /**
     * @param args
     */
    public static void main(String[] args) {
        Scanner keyboard = new Scanner(System.in);
        int a = 0;
        int b = 0;
        int c = 0;

        // Read an integer from the keyboard.
        System.out.print("Enter a (0 to quit): ");
        a = keyboard.nextInt();

        // your code here
        // Read another integer from the keyboard
        System.out.print("Enter b (0 to quit): ");
        b = keyboard.nextInt();
        
        // gcd function call
        c = Lab01.gcd( a, b );

        // your code here
        System.out.printf("The GCD of %d and %d is %d", a,b,c);
    }

}